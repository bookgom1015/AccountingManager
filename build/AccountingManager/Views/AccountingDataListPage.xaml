<Page
    x:Name="RootPage"
    x:Class="AccountingManager.Views.AccountingDataListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Style="{StaticResource PageStyle}"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True" 
    mc:Ignorable="d"
    Background="Transparent">
    <Page.Resources>
        <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFF9F9F9" />
        <SolidColorBrush x:Key="ShadowBorderBrush" Color="#FFE2E2E2" />
        <!-- Simple border button -->
        <Style TargetType="Button" x:Key="SimpleBorderButton">
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="{StaticResource ShadowBorderBrush}" />
            <Setter Property="BorderThickness" Value="1, 0, 0, 2" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}" />
            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                            <ContentPresenter x:Name="ButtonContentPresenter"
                                              BorderBrush="{TemplateBinding BorderBrush}"
                                              BorderThickness="{TemplateBinding BorderThickness}"
                                              Content="{TemplateBinding Content}"
                                              ContentTransitions="{TemplateBinding ContentTransitions}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              Padding="{TemplateBinding Padding}"
                                              HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                              CornerRadius="{TemplateBinding CornerRadius}"
                                              AutomationProperties.AccessibilityView="Raw"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#FFFDFDFD" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlHighlightBaseHighBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ShadowBorderBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <PointerUpThemeAnimation Storyboard.TargetName="RootGrid" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="RootGrid" Storyboard.TargetProperty="Background">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="#FFFBFBFB" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonContentPresenter" Storyboard.TargetProperty="Foreground">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlHighlightBaseHighBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ButtonContentPresenter" Storyboard.TargetProperty="BorderBrush">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource ShadowBorderBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <PointerDownThemeAnimation Storyboard.TargetName="RootGrid" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0, 20 0, 0">
                <Button x:Name="AddYearButton"
                        Width="140" Height="40"
                        Margin="10, 0, 0, 0"
                        Click="AddYearButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="30" Height="{Binding RelativeSource={RelativeSource Self}, Mode=OneWay}"
                               Source="/Assets/Square44x44Logo.scale-200.png" />
                        <TextBlock VerticalAlignment="Center"
                                   Margin="10, 0, 0, 0"
                                   FontSize="18" Text="연도 추가" />
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <Frame x:Name="YearlyNavFrame" />
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="{StaticResource WindowBackgroundBrush}"
              Padding="15, 0, 0, 0"
              BorderBrush="{StaticResource ShadowBorderBrush}"
              BorderThickness="2, 1, 0, 0"
              CornerRadius="8, 0, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="60" />
                <RowDefinition Height="50" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="80" />
                    <Setter Property="Height" Value="32" />
                    <Setter Property="Margin" Value="10, 0, 0, 0" />
                    <Setter Property="IsEnabled" Value="{x:Bind Path=ViewModel.YearSelected, Mode=OneWay}" />
                </Style>
                <Style TargetType="Image">
                    <Setter Property="Width" Value="20" />
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="10, 0, 0, 0" />
                </Style>
            </Grid.Resources>
            <Grid Grid.Row="0" Margin="0, 20, 15, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBox x:Name="InputText" Height="32" />
                </Grid>
                <Grid Grid.Column="1">
                    <Button  HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Square44x44Logo.scale-200.png" />
                            <TextBlock Text="검색" />
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Margin="0, 0, 15, 0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">                    
                    <Button x:Name="AddButton" Click="AddButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Square44x44Logo.scale-200.png" />
                            <TextBlock Text="추가" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="EditButton" Click="EditButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Square44x44Logo.scale-200.png" />
                            <TextBlock Text="수정" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="DeleteButton" Click="DeleteButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/Square44x44Logo.scale-200.png" />
                            <TextBlock Text="삭제" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.DataTypeColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.ClientNameColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.DateColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.SteelWeightColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.SupplyPriceColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.TaxAmountColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.SumColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.DepositConfirmColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="controls:GridSplitter">
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="ResizeDirection" Value="Columns" />
                        <Setter Property="ResizeBehavior" Value="BasedOnAlignment" />
                        <Setter Property="CursorBehavior" Value="ChangeOnSplitterHover" />
                        <Setter Property="IsTabStop" Value="False" />
                        <Setter Property="Width" Value="16" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Grid>
                                        <Rectangle Fill="{StaticResource WindowBackgroundBrush}" Width="2" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>
                <!-- Column button for data type -->
                <Grid Grid.Column="0">
                    <Button x:Name="DataTypeColumnButton"
                            Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Click="DataTypeColumnButton_Click"
                            Content="매입/매출"
                            IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="1" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Column button for client name -->
                <Grid Grid.Column="1">
                    <Button x:Name="ClientNameColumnButton"
                            Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Click="ClientNameColumnButton_Click"
                            Content="거래처명"
                            IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="2"  GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Column button for date -->
                <Grid Grid.Column="2">
                    <Button x:Name="DateColumnButton"
                            Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Click="DateColumnButton_Click"
                            Content="날짜"
                            IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="3"  GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Column button for steel weight -->
                <Grid Grid.Column="3">
                    <Button x:Name="SteelWeightColumnButton"
                            Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Click="SteelWeightColumnButton_Click"
                            Content="철강무게"
                            IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="4"  GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Column button for supply price -->
                <Grid Grid.Column="4">
                    <Button x:Name="SupplyPriceColumnButton"
                            Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Click="SupplyPriceColumnButton_Click"
                            Content="공급가격"
                            IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="5"  GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Column button for tax amount -->
                <Grid Grid.Column="5">
                    <Button x:Name="TaxAmountColumnButton"
                            Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Click="TaxAmountColumnButton_Click"
                            Content="세액"
                            IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="6"  GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Column button for sum -->
                <Grid Grid.Column="6">
                    <Button x:Name="SumColumnButton"
                            Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Click="SumColumnButton_Click"
                            Content="합계"
                            IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="7"  GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Column button for deposit confirm -->
                <Grid Grid.Column="7">
                    <Button x:Name="DepositConfirmColumnButton"
                            Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Click="DepositConfirmColumnButton_Click"
                            Content="입금확인"
                            IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="8"  GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Blank column -->
                <Grid Grid.Column="8" />
            </Grid>
            <Grid Grid.Row="3">
                <Frame x:Name="DetailListFrame" />
            </Grid>
        </Grid>
    </Grid>
</Page>
