<Page x:Class="AccountingManager.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:behaviours="using:Microsoft.Toolkit.Uwp.UI.Behaviors"
      Style="{StaticResource PageStyle}"
      xmlns:prismMvvm="using:Prism.Windows.Mvvm"
      prismMvvm:ViewModelLocator.AutoWireViewModel="True"
      mc:Ignorable="d"
      SizeChanged="{x:Bind Path=ViewModel.OnWindowSizeChanged}">
    <Page.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FF202120" />
        <SolidColorBrush x:Key="BorderColor" Color="#FF535353" />
        <SolidColorBrush x:Key="ContentColor" Color="#FF2B2B2C" />
        <SolidColorBrush x:Key="FontColor" Color="#FFFFFFFF" />
        <Style TargetType="Grid">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Foreground" Value="{StaticResource FontColor}" />
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
        </Style>
    </Page.Resources>
    <!-- Root grid -->    
    <Grid x:Name="ContentArea">
        <Grid.Resources>
            <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#FFDEDEDE" />
            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#FFDEDEDE" />
            <SolidColorBrush x:Key="ButtonBackground" Color="#FF2B2B2C" />
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF434343" />
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#FF838383" />
            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="#FF434343" />
            <SolidColorBrush x:Key="TextControlForeground" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="TextControlForegroundFocused" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="TextControlBackground" Color="#FF2D2D2E" />
            <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="#FF323233" />
            <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="#FF1F1F1F" />
            <SolidColorBrush x:Key="TextControlBorderBrush" Color="#FF2D2D2E" />
            <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="#FF323233" />
            <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="#FF404040" />
            <!-- Point over -->
            <SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="#FF2D2D2E" />
            <!-- Pressed -->
            <SolidColorBrush x:Key="SystemControlHighlightListMediumBrush" Color="#FF29292A" />
            <!-- Selected & unfocused -->
            <SolidColorBrush x:Key="SystemControlHighlightListAccentLowBrush" Color="#FF2D2D2E" />
            <!-- Selected & point over -->
            <SolidColorBrush x:Key="SystemControlHighlightListAccentMediumBrush" Color="#FF29292A" />
            <!-- Selected & pressed -->
            <SolidColorBrush x:Key="SystemControlHighlightListAccentHighBrush" Color="#FF29292A" />
            <SolidColorBrush x:Key="SystemControlHighlightAltBaseHighBrush" Color="#FFFFFFFF" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <!-- Grid for menu -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <!-- Title text -->
            <TextBlock Grid.Row="0" HorizontalAlignment="Center" Margin="0, 10, 0, 0" Foreground="{StaticResource FontColor}" FontSize="48" Text="Hello" />
            <!-- Stacㅏ for listing dates -->
            <StackPanel x:Name="dateStackPanel" Grid.Row="2" Margin="10, 0, 10, 0">
                <ListBox x:Name="dateListView" ItemsSource="{x:Bind Path=ViewModel.DateList}"
                         HorizontalContentAlignment="Right" FontSize="28">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="30" />
                                    <TextBlock Text="{Binding Year}" />
                                </StackPanel>
                                <ListBox ItemsSource="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=DataContext.Months}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock Width="30" Height="12" />
                                                <TextBlock Text="{Binding}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="BorderThickness" Value="0, 2, 0, 2" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </StackPanel>
        </Grid>
        <!-- Grid for display -->
        <Grid Grid.Column="1" Padding="20, 0, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="60" />
                <RowDefinition Height="40" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <!-- Grid for search -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>
                <!-- TextBox for search -->
                <TextBox Grid.Column="0"
                         Text="{x:Bind Path=ViewModel.Str, Mode=OneWay}"
                         PlaceholderText="검색어를 입력"
                         PlaceholderForeground="#FFCFCFCF"
                         VerticalAlignment="Center" Height="32">
                </TextBox>
                <!-- Button for search -->
                <Button Grid.Column="1"
                        Command="{x:Bind Path=ViewModel.ClickedButtonCommand}"
                        HorizontalAlignment="Center" Width="80" Height="32"
                        Content="검색" />
            </Grid>
            <!-- Stack for edit buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 10, 15, 5">
                <StackPanel.Resources>
                    <Style TargetType="Button" x:Key="EditButtons">
                        <Setter Property="Margin" Value="5, 0, 5, 0" />
                        <Setter Property="Width" Value="30" />
                        <Setter Property="Height" Value="30" />
                    </Style>
                    <Style TargetType="Image" x:Key="EditButtonImages">
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="VerticalAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="-5, -5, -5, -5" />
                    </Style>
                </StackPanel.Resources>
                <Button Style="{StaticResource EditButtons}" Command="{x:Bind Path=ViewModel.ClickedButtonCommand}">
                    <Image Source="/Assets/white_plus.png" Style="{StaticResource EditButtonImages}" />
                </Button>
                <Button Style="{StaticResource EditButtons}" Command="{x:Bind Path=ViewModel.ClickedButtonCommand}">
                    <Image Source="/Assets/white_minus.png" Style="{StaticResource EditButtonImages}" />
                </Button>
            </StackPanel>
            <!-- Grid for view columns -->
            <Grid Grid.Row="2">
                <Grid.Resources>
                    <Style TargetType="controls:GridSplitter">
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="ResizeDirection" Value="Columns" />
                        <Setter Property="ResizeBehavior" Value="BasedOnAlignment" />
                        <Setter Property="CursorBehavior" Value="ChangeOnSplitterHover" />
                        <Setter Property="Width" Value="16" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Grid>
                                        <Rectangle Fill="{StaticResource BorderColor}" Width="2" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="Button" x:Key="ViewColumnButton">
                        <Setter Property="Foreground" Value="#FFDEDEDE" />
                        <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
                        <Setter Property="Command" Value="{x:Bind Path=ViewModel.ClickedButtonCommand}" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="VerticalAlignment" Value="Stretch" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.NameColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.DateColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.PriceColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.TaxColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.SumColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.CheckColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="1*" />                    
                </Grid.ColumnDefinitions>
                <!-- For account -->
                <Grid Grid.Column="0">
                    <Button Style="{StaticResource ViewColumnButton}" Content="거래처" />
                </Grid>
                <controls:GridSplitter Grid.Column="1"  GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For date -->
                <Grid Grid.Column="1">
                    <Button Style="{StaticResource ViewColumnButton}" Content="날짜" />
                </Grid>
                <controls:GridSplitter Grid.Column="2" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For supply price -->
                <Grid Grid.Column="2">
                    <Button Style="{StaticResource ViewColumnButton}" Content="공급가격" />
                </Grid>
                <controls:GridSplitter Grid.Column="3" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For tax amount -->
                <Grid Grid.Column="3">
                    <Button Style="{StaticResource ViewColumnButton}" Content="세액" />
                </Grid>
                <controls:GridSplitter Grid.Column="4" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For sum -->
                <Grid Grid.Column="4">
                    <Button Style="{StaticResource ViewColumnButton}" Content="합계" />
                </Grid>
                <controls:GridSplitter Grid.Column="5" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For checking deposit -->
                <Grid Grid.Column="5">
                    <Button Style="{StaticResource ViewColumnButton}" Content="입금확인" />
                </Grid>
                <controls:GridSplitter Grid.Column="6" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Blank view columns -->
                <StackPanel Grid.Column="6">
                    
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.NameColumnWidth, Mode=OneWay}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.DateColumnWidth, Mode=OneWay}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.PriceColumnWidth, Mode=OneWay}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.TaxColumnWidth, Mode=OneWay}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.SumColumnWidth, Mode=OneWay}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.CheckColumnWidth, Mode=OneWay}" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Background="#bbbbbb">
                    
                </StackPanel>
                <StackPanel Grid.Column="1" Background="#aaaaaa">

                </StackPanel>
                <StackPanel Grid.Column="2" Background="#999999">

                </StackPanel>
                <StackPanel Grid.Column="3" Background="#888888">

                </StackPanel>
                <StackPanel Grid.Column="4" Background="#777777">

                </StackPanel>
                <StackPanel Grid.Column="5" Background="#666666">

                </StackPanel>
                <StackPanel Grid.Column="6" Background="#555555">

                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
