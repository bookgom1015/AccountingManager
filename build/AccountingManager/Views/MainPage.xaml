                <Grid Grid.Column="4">
                    <Button x:Name="PriceColumnButton" Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Content="공급가격" Click="PriceColumnButton_Click" IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="5" GripperCursor="Default" IsTabStop="False">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For tax amount -->
                <Grid Grid.Column="5">
                    <Button x:Name="TaxColumnButton" Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Content="세액" Click="TaxColumnButton_Click" IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="6" GripperCursor="Default" IsTabStop="False">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For sum -->
                <Grid Grid.Column="6">
                    <Button x:Name="SumColumnButton" Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Content="합계" Click="SumColumnButton_Click" IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="7" GripperCursor="Default" IsTabStop="False">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For checking deposit -->
                <Grid Grid.Column="7">
                    <Button x:Name="ConfirmColumnButton" Style="{StaticResource SimpleBorderButton}"
                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                            Content="입금확인" Click="ConfirmColumnButton_Click" IsTabStop="False" />
                </Grid>
                <controls:GridSplitter Grid.Column="8" GripperCursor="Default" IsTabStop="False">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Blank view columns -->
                <Grid Grid.Column="8" />
            </Grid>
            <Grid Grid.Row="3">
                <ListBox x:Name="AccountingDataListBox" Background="{StaticResource ContentViewBackgroundColor}" TabIndex="5">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</Page>
