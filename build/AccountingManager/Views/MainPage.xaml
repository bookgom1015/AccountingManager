<Page
    x:Name="RootPage"
    x:Class="AccountingManager.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviours="using:Microsoft.Toolkit.Uwp.UI.Behaviors"
    Style="{StaticResource PageStyle}"
    xmlns:prismMvvm="using:Prism.Windows.Mvvm"
    prismMvvm:ViewModelLocator.AutoWireViewModel="True"
    Loaded="RootPage_Loaded"
    SizeChanged="{x:Bind Path=ViewModel.OnWindowSizeChanged}"
    mc:Ignorable="d">
    <Page.Resources>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FF202120" />
        <SolidColorBrush x:Key="BorderColor" Color="#FF535353" />
        <SolidColorBrush x:Key="ContentColor" Color="#FF2B2B2C" />
        <SolidColorBrush x:Key="FontColor" Color="#FFFFFFFF" />
        <Style TargetType="Grid">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Foreground" Value="{StaticResource FontColor}" />
            <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
        </Style>
    </Page.Resources>
    <!-- Root grid -->    
    <Grid x:Name="ContentArea">
        <Grid.Resources>
            <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="#FFDEDEDE" />
            <SolidColorBrush x:Key="ButtonForegroundPressed" Color="#FFDEDEDE" />
            <SolidColorBrush x:Key="ButtonBackground" Color="#FF2B2B2C" />
            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FF434343" />
            <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#FF838383" />
            <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="#FF434343" />
            <!-- TextBox Unfocused -->
            <SolidColorBrush x:Key="TextControlForeground" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="TextControlBackground" Color="#FF2D2D2E" />
            <SolidColorBrush x:Key="TextControlBorderBrush" Color="#FF2D2D2E" />
            <!-- TextBox Point over -->
            <SolidColorBrush x:Key="TextControlForegroundPointerOver" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="#FF323233" />
            <SolidColorBrush x:Key="TextControlBorderBrushPointerOver" Color="#FF323233" />
            <!-- TextBox Focused -->
            <SolidColorBrush x:Key="TextControlForegroundFocused" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="#FF1F1F1F" />
            <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="#FF404040" />
            <!-- ListBox Point over -->
            <SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="#FF2D2D2E" />
            <!-- ListBox Pressed -->
            <SolidColorBrush x:Key="SystemControlHighlightListMediumBrush" Color="#FF29292A" />
            <!-- ListBox Selected & Unfocused -->
            <SolidColorBrush x:Key="SystemControlHighlightListAccentLowBrush" Color="#FF2D2D2E" />
            <!-- ListBox Selected & Point over -->
            <SolidColorBrush x:Key="SystemControlHighlightListAccentMediumBrush" Color="#FF29292A" />
            <!-- ListBox Selected & Pressed -->
            <SolidColorBrush x:Key="SystemControlHighlightListAccentHighBrush" Color="#FF29292A" />
            <SolidColorBrush x:Key="SystemControlHighlightAltBaseHighBrush" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="CheckBoxCheckGlyphForegroundCheckedDisabled" Color="#FFFFFFFF" />
            <!-- CHeckBox Disabled & Foreground -->
            <SolidColorBrush x:Key="CheckBoxForegroundUncheckedDisabled" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="CheckBoxForegroundCheckedDisabled" Color="#FFFFFFFF" />
            <!-- CheckBox Diabled & Checked-->
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeCheckedDisabled" Color="#FFFFFFFF" />
            <!-- CheckBox Diabled & Unchecked-->
            <SolidColorBrush x:Key="CheckBoxCheckBackgroundStrokeUncheckedDisabled" Color="#FFFFFFFF" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <!-- Grid for menu -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <!-- Stacㅏ for listing dates -->
            <Grid x:Name="DateStackPanel" Grid.Row="0">
                <Frame x:Name="DateNavFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </Grid>
        </Grid>
        <!-- Grid for display -->
        <Grid Grid.Column="1" Padding="15, 0, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="60" />
                <RowDefinition Height="40" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <!-- Grid for search -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>
                <!-- TextBox for search -->
                <TextBox x:Name="InputText" Grid.Column="0"
                         PlaceholderText="검색어를 입력"
                         PlaceholderForeground="#FFCFCFCF"
                         VerticalAlignment="Center" Height="32"
                         Text="{x:Bind Path=ViewModel.DisplayedStr, Mode=OneWay}">
                </TextBox>
                <!-- Button for search -->
                <Button Grid.Column="1"
                        Command="{x:Bind Path=ViewModel.ClickedButtonCommand}"
                        HorizontalAlignment="Center" Width="80" Height="32"
                        Content="검색" />
            </Grid>
            <!-- Stack for edit buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 10, 15, 5">
                <StackPanel.Resources>
                    <Style TargetType="Button" x:Key="EditButtons">
                        <Setter Property="Margin" Value="5, 0, 5, 0" />
                        <Setter Property="Width" Value="60" />
                        <Setter Property="Height" Value="30" />
                    </Style>
                    <Style TargetType="Image" x:Key="EditButtonImages">
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="VerticalAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="-5, -5, -5, -5" />
                    </Style>
                </StackPanel.Resources>
                <Button x:Name="AddButton" Style="{StaticResource EditButtons}" Click="AddButton_Click" Content="추가" />
                <Button x:Name="EditButton" Style="{StaticResource EditButtons}" Click="EditButton_Click" Content="수정" />
                <Button x:Name="DeleteButton" Style="{StaticResource EditButtons}" Click="DeleteButton_Click" Content="삭제" />
            </StackPanel>
            <!-- Grid for view columns -->
            <Grid Grid.Row="2">
                <Grid.Resources>
                    <Style TargetType="controls:GridSplitter">
                        <Setter Property="HorizontalAlignment" Value="Left" />
                        <Setter Property="ResizeDirection" Value="Columns" />
                        <Setter Property="ResizeBehavior" Value="BasedOnAlignment" />
                        <Setter Property="CursorBehavior" Value="ChangeOnSplitterHover" />
                        <Setter Property="Width" Value="16" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Grid>
                                        <Rectangle Fill="{StaticResource BorderColor}" Width="2" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="Button" x:Key="ViewColumnButton">
                        <Setter Property="Foreground" Value="#FFDEDEDE" />
                        <Setter Property="Background" Value="{StaticResource BackgroundColor}" />
                        <Setter Property="HorizontalAlignment" Value="Stretch" />
                        <Setter Property="VerticalAlignment" Value="Stretch" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.TypeColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.NameColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.DateColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.WeightColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.PriceColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.TaxColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.SumColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="{x:Bind Path=ViewModel.CheckColumnWidth, Mode=TwoWay}"
                                      MinWidth="{x:Bind Path=ViewModel.DefaultMinColumnWidth, Mode=OneTime}" />
                    <ColumnDefinition Width="1*" />                    
                </Grid.ColumnDefinitions>
                <!-- For type -->
                <Grid Grid.Column="0">
                    <Button x:Name="TypeColumnButton" Style="{StaticResource ViewColumnButton}" Content="매입/매출" Click="TypeColumnButton_Click" />
                </Grid>
                <controls:GridSplitter Grid.Column="1"  GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For account -->
                <Grid Grid.Column="1">
                    <Button x:Name="NameColumnButton" Style="{StaticResource ViewColumnButton}" Content="거래처"  Click="NameColumnButton_Click" />
                </Grid>
                <controls:GridSplitter Grid.Column="2"  GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For date -->
                <Grid Grid.Column="2">
                    <Button x:Name="DateColumnButton" Style="{StaticResource ViewColumnButton}" Content="날짜" Click="DateColumnButton_Click" />
                </Grid>
                <controls:GridSplitter Grid.Column="3" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For weight -->
                <Grid Grid.Column="3">
                    <Button x:Name="WeightColumnButton" Style="{StaticResource ViewColumnButton}" Content="철강무게" Click="WeightColumnButton_Click" />
                </Grid>
                <controls:GridSplitter Grid.Column="4" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For supply price -->
                <Grid Grid.Column="4">
                    <Button x:Name="PriceColumnButton" Style="{StaticResource ViewColumnButton}" Content="공급가격" Click="PriceColumnButton_Click" />
                </Grid>
                <controls:GridSplitter Grid.Column="5" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For tax amount -->
                <Grid Grid.Column="5">
                    <Button x:Name="TaxColumnButton" Style="{StaticResource ViewColumnButton}" Content="세액" Click="TaxColumnButton_Click" />
                </Grid>
                <controls:GridSplitter Grid.Column="6" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For sum -->
                <Grid Grid.Column="6">
                    <Button x:Name="SumColumnButton" Style="{StaticResource ViewColumnButton}" Content="합계" Click="SumColumnButton_Click" />
                </Grid>
                <controls:GridSplitter Grid.Column="7" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- For checking deposit -->
                <Grid Grid.Column="7">
                    <Button x:Name="ConfirmColumnButton" Style="{StaticResource ViewColumnButton}" Content="입금확인" Click="ConfirmColumnButton_Click" />
                </Grid>
                <controls:GridSplitter Grid.Column="8" GripperCursor="Default">
                    <controls:GridSplitter.RenderTransform>
                        <TranslateTransform X="-8" />
                    </controls:GridSplitter.RenderTransform>
                </controls:GridSplitter>
                <!-- Blank view columns -->
                <StackPanel Grid.Column="8">
                    
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3">
                <ListBox x:Name="AccountingDataListBox" Loaded="AccountingDataListBox_Loaded">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Grid>
    </Grid>
</Page>
